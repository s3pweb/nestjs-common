{
  "name": "@s3pweb/nestjs-common",
  "version": "1.0.0",
  "description": "A NestJS guard to authorise only the given IP(s)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --maxWorkers=50%",
    "test:clear": "jest --clearCache",
    "build": "rimraf dist && tsc",
    "prepublish": "npm run build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "release": "commit-and-tag-version",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s3pweb/nestjs-ip-whitelist.git"
  },
  "homepage": "https://github.com/s3pweb/nestjs-ip-whitelist",
  "author": "s3pweb",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@s3pweb/s3pweb-logger": "^1.0.0"
  },
  "dependencies": {
    "request-ip": "^3.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nestjs/testing": "^9.2.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "commit-and-tag-version": "^11.1.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/**/"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  }
}
